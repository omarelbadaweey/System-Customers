<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results</title>
    <link rel="icon" href="/img/admin.jpg" />
    <link rel="stylesheet" href="input.css" />
    <link rel="stylesheet" href="output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>

  <body class="bg-gray-100">
    <%- include("partials/sideBar") %>
    <section class="bg-gray-100 min-h-screen p-8 ml-[20%] pt-28">
      <% if (Search.length === 0 ) { %>
      <div
        class="max-w-4xl mx-auto text-center bg-white rounded-xl shadow p-8 mt-20"
      >
        <i
          class="fa-solid fa-circle-exclamation text-yellow-500 text-5xl mb-4"
        ></i>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">
          No results found
        </h3>
        <p class="text-gray-500">Try searching with different keywords.</p>
      </div>
      <% } else{ %>
      <!-- ÿπŸÜŸàÿßŸÜ ÿßŸÑÿ®ÿ≠ÿ´ -->
      <div class="max-w-6xl mx-auto mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">üîç Search Results</h2>
      </div>

      <!-- ŸÇÿßÿ¶ŸÖÿ© ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨ -->
      <div
        class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <!-- ŸÉÿßÿ±ÿ™ ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖ -->

        <% Search.forEach((item , index) => { %>

        <div
          class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition p-5"
        >
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-bold text-gray-800">
              <%= item.firstname %> <%= item.lastname %>
            </h3>
            <span class="text-sm text-gray-500"># <%= index+1 %></span>
          </div>

          <div class="space-y-2 text-sm text-gray-600">
            <p>
              <i class="fa-solid fa-envelope text-blue-500 mr-2"></i>
              <%= item.email %>
            </p>
            <p>
              <i class="fa-solid fa-phone text-green-500 mr-2"></i> <%=
              item.mobileNumber %>
            </p>
            <p>
              <i class="fa-solid fa-globe text-purple-500 mr-2"></i> <%=
              item.country %>
            </p>
            <p>
              <i class="fa-solid fa-venus-mars text-pink-500 mr-2"></i> <%=
              item.gender %>, <%= item.age %> years old
            </p>
          </div>

          <div class="flex justify-end items-center mt-4 space-x-3 text-lg">
            <a
              href="/user/<%= item._id %>"
              class="text-green-500 hover:text-green-600 transition"
            >
              <i class="fa-solid fa-eye"></i>
            </a>
            <a
              href="/edit/<%= item._id %>"
              class="text-yellow-500 hover:text-yellow-600 transition"
            >
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
            <form action="/delete/<%= item._id %>?_method=DELETE" method="post">
              <button
              type="submit"
                class="cursor-pointer text-red-500 hover:text-red-600 transition"
              >
                <i class="fa-solid fa-trash"></i>
              </button>
            </form>
          </div>
        </div>

        <% }) %>
      </div>
      <% } %>
    </section>
  </body>
</html>
